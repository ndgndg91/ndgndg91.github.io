<section id="json-parser-tool" class="section">
  <div class="container">
    <div class="input-section">
      <h3>Input</h3>
      <label for="json-input"></label><textarea id="json-input" placeholder="Enter JSON..." rows="10"></textarea>
    </div>
    <div class="controls">
      <label for="indent-level"></label><select id="indent-level">
        <option value="2">2 space</option>
        <option value="4">4 space</option>
        <option value="8">8 space</option>
      </select>
      <button id="format-button">format</button>
      <button id="copy-button">copy</button>
    </div>
    <div class="output-section">
      <h3>Output</h3>
      <pre id="json-output"><code class="language json"></code></pre>
    </div>
  </div>
</section>
